{
  "name": "purescript-language-server",
  "description": "Language Server Protocol server for PureScript wrapping purs ide server functionality",
  "version": "0.16.3",
  "publisher": "nwolverson",
  "author": {
    "name": "Nicholas Wolverson"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nwolverson/purescript-language-server.git"
  },
  "bugs": {
    "url": "https://github.com/nwolverson/purescript-language-server/issues"
  },
  "homepage": "https://github.com/nwolverson/purescript-language-server",
  "license": "MIT",
  "main": "./server.js",
  "bin": "./cli.js",
  "engines": {
    "node": ">=14"
  },
  "targets": {
    "main": {
      "includeNodeModules": true,
      "optimize": true,
      "sourceMap": false
    }
  },
  "scripts": {
    "prepare": "run-s install:* build",
    "install:spago": "spago install",
    "build": "run-s build:tsc build:spago build:bundle",
    "build:tsc": "tsc -p src/LanguageServer/",
    "build:spago": "spago build",
    "build:bundle": "esbuild --bundle --platform=node --outfile=bundle.js ./output/LanguageServer.IdePurescript.Main",
    "build:bundle-min": "npm run build:bundle -- --minify --sourcemap --sources-content=false",
    "watch:bundle": "npm run build:bundle -- --watch",
    "watch:tsc": "npm run build:tsc -- --watch",
    "format:js": "prettier --write ./{src,test}/**/*.{ts,js} && npm run build:tsc"
  },
  "files": [
    "bundle.js",
    "bundle.js.map",
    "cli.js",
    "server.js"
  ],
  "dependencies": {
    "shell-quote": "^1.7.2",
    "uuid": "^3.3.2",
    "vscode-jsonrpc": "^8.0.0-next.2",
    "vscode-languageserver": "^8.0.0-next.2",
    "vscode-languageserver-textdocument": "^1.0.1",
    "vscode-uri": "^2.1.1",
    "which": "^2.0.2"
  },
  "devDependencies": {
    "esbuild": "^0.13.15",
    "@rowtype-yoga/prettier-plugin-purescript": "^1.11.2",
    "@types/node": "^16.9.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "typescript": "^4.5.2"
  }
}
